---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import CountyMap from '../../components/CountyMap.astro';

const candidates = await getCollection('candidates');

const municipalityMap = new Map();

candidates.forEach((candidate) => {
  const municipality = candidate.data.municipality;
  if (!municipalityMap.has(municipality)) {
    municipalityMap.set(municipality, 0);
  }
  municipalityMap.set(municipality, municipalityMap.get(municipality) + 1);
});

const municipalities = Array.from(municipalityMap.entries())
  .map(([name, count]) => ({
    name,
    count,
    slug: name.toLowerCase().replace(/\s+/g, '-')
  }))
  .sort((a, b) => a.name.localeCompare(b.name));
---

<Layout title="Municipalities - Autario Votes - Simcoe County">
  <div class="container page-content">
    <h1>Simcoe County Municipalities</h1>
    <p class="intro">
      Simcoe County is located in Southern Ontario and consists of 18 municipalities. 
      Select your municipality below to view candidates running for office in your area.
    </p>

    <div class="content-wrapper">
      <div class="map-section">
        <h2>Simcoe County Map</h2>
        <div class="map-container">
          <CountyMap />
          <!-- <p class="map-note">Interactive map - click on any municipality to view candidates</p> -->
        </div>
      </div>

      <div class="list-section">
        <h2>All Municipalities</h2>
        <div class="municipalities-list">
          {municipalities.map((municipality) => (
            <a href={`/municipalities/${municipality.slug}`} class="municipality-card">
              <div class="municipality-info">
                <h3>{municipality.name}</h3>
                <p class="candidate-count">
                  {municipality.count} {municipality.count === 1 ? 'candidate' : 'candidates'}
                </p>
              </div>
              <span class="arrow">â†’</span>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>

  <style>
    .page-content {
      padding: 3rem 0;
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      color: var(--primary);
    }

    .intro {
      font-size: 1.1rem;
      color: var(--text-light);
      margin-bottom: 3rem;
      max-width: 800px;
    }

    .content-wrapper {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
      margin-bottom: 3rem;
    }

    @media (max-width: 968px) {
      .content-wrapper {
        grid-template-columns: 1fr;
      }
    }

    .map-section h2,
    .list-section h2 {
      font-size: 1.5rem;
      margin-bottom: 1.5rem;
      color: var(--text);
    }

    .map-container {
      background: var(--bg-alt);
      padding: 2rem;
      border-radius: 0.5rem;
      border: 1px solid var(--border);
    }

    .county-map {
      width: 100%;
      height: auto;
      max-width: 500px;
      margin: 0 auto;
      display: block;
    }

    .map-note {
      text-align: center;
      color: var(--text-light);
      font-size: 0.9rem;
      margin-top: 1rem;
      font-style: italic;
    }

    .municipalities-list {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .municipality-card {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1.25rem 1.5rem;
      background: var(--bg);
      border: 1px solid var(--border);
      border-radius: 0.5rem;
      text-decoration: none;
      color: inherit;
      transition: all 0.2s;
    }

    .municipality-card:hover {
      border-color: var(--primary);
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      transform: translateX(4px);
    }

    .municipality-info h3 {
      font-size: 1.1rem;
      margin-bottom: 0.25rem;
      color: var(--text);
    }

    .candidate-count {
      color: var(--text-light);
      font-size: 0.9rem;
    }

    .arrow {
      color: var(--primary);
      font-size: 1.5rem;
      font-weight: 700;
      transition: transform 0.2s;
    }

    .municipality-card:hover .arrow {
      transform: translateX(4px);
    }
  </style>
</Layout>
