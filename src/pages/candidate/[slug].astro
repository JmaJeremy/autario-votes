---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const candidates = await getCollection('candidates');
  return candidates.map((candidate) => ({
    params: { slug: candidate.slug },
    props: { candidate },
  }));
}

const { candidate } = Astro.props;
const { Content } = await candidate.render();
---

<Layout title={`${candidate.data.name} - ${candidate.data.position}`}>
  <article class="container candidate-page">
    <div class="candidate-header">
      <div class="candidate-image">
        {candidate.data.image ? (
          <img src={candidate.data.image} alt={candidate.data.name} />
        ) : (
          <div class="placeholder-image">
            <span>{candidate.data.name.charAt(0)}</span>
          </div>
        )}
      </div>
      <div class="candidate-info">
        <h1>{candidate.data.name}</h1>
        <p class="position">{candidate.data.position}</p>
        {candidate.data.party && <p class="party">{candidate.data.party}</p>}
        
        <div class="contact-links">
          {candidate.data.website && (
            <a href={candidate.data.website} target="_blank" rel="noopener noreferrer">
              üåê Website
            </a>
          )}
          {candidate.data.email && (
            <a href={`mailto:${candidate.data.email}`}>
              ‚úâÔ∏è Email
            </a>
          )}
          {candidate.data.phone && (
            <a href={`tel:${candidate.data.phone}`}>
              üìû {candidate.data.phone}
            </a>
          )}
        </div>
      </div>
    </div>

    <div class="candidate-bio">
      <Content />
    </div>

    <div class="back-link">
      <a href="/candidates">‚Üê Back to all candidates</a>
    </div>
  </article>

  <style>
    .candidate-page {
      padding: 3rem 0;
      max-width: 900px;
    }

    .candidate-header {
      display: grid;
      grid-template-columns: 250px 1fr;
      gap: 2rem;
      margin-bottom: 3rem;
      padding-bottom: 2rem;
      border-bottom: 2px solid var(--border);
    }

    .candidate-image {
      aspect-ratio: 3/4;
      border-radius: 0.5rem;
      overflow: hidden;
      background: var(--bg-alt);
    }

    .candidate-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .placeholder-image {
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
      color: white;
      font-size: 5rem;
      font-weight: 700;
    }

    .candidate-info h1 {
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
      color: var(--text);
    }

    .position {
      font-size: 1.25rem;
      color: var(--text-light);
      margin-bottom: 0.25rem;
    }

    .party {
      color: var(--primary);
      font-weight: 600;
      margin-bottom: 1.5rem;
    }

    .contact-links {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .contact-links a {
      display: inline-block;
      padding: 0.5rem 1rem;
      background: var(--bg-alt);
      border: 1px solid var(--border);
      border-radius: 0.375rem;
      font-size: 0.9rem;
      transition: background 0.2s;
    }

    .contact-links a:hover {
      background: var(--bg);
      text-decoration: none;
    }

    .candidate-bio {
      font-size: 1.05rem;
      line-height: 1.8;
    }

    .candidate-bio :global(h2) {
      font-size: 1.75rem;
      margin-top: 2rem;
      margin-bottom: 1rem;
      color: var(--primary);
    }

    .candidate-bio :global(h3) {
      font-size: 1.25rem;
      margin-top: 1.5rem;
      margin-bottom: 0.75rem;
    }

    .candidate-bio :global(ul) {
      padding-left: 2rem;
      margin-bottom: 1.5rem;
    }

    .candidate-bio :global(li) {
      margin-bottom: 0.5rem;
    }

    .candidate-bio :global(p) {
      margin-bottom: 1rem;
    }

    .back-link {
      margin-top: 3rem;
      padding-top: 2rem;
      border-top: 1px solid var(--border);
    }

    .back-link a {
      font-weight: 600;
    }

    @media (max-width: 768px) {
      .candidate-header {
        grid-template-columns: 1fr;
      }

      .candidate-image {
        max-width: 300px;
        margin: 0 auto;
      }

      .candidate-info h1 {
        font-size: 2rem;
      }
    }
  </style>
</Layout>