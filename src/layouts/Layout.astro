---
import Header from '../components/Header.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Your trusted source for local election information" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        --primary: #1d4ed8;
        --primary-dark: #1e40af;
        --text: #1f2937;
        --text-light: #6b7280;
        --border: #e5e7eb;
        --bg: #ffffff;
        --bg-alt: #f9fafb;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
        line-height: 1.6;
        color: var(--text);
        background: var(--bg);
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
      }

      a {
        color: var(--primary);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      a:focus {
        outline: 2px solid var(--primary);
        outline-offset: 2px;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <footer>
      <div class="container">
        <p>&copy; {new Date().getFullYear()} Election Information Portal. Non-partisan voter resource.</p>
        <p>
          <a href="https://github.com/yourusername/election-info-site">Contribute on GitHub</a>
        </p>
      </div>
    </footer>
    <style>
      footer {
        margin-top: 4rem;
        padding: 2rem 0;
        background: var(--bg-alt);
        border-top: 1px solid var(--border);
        text-align: center;
        color: var(--text-light);
      }

      footer p {
        margin: 0.25rem 0;
      }
    </style>
  </body>
</html>